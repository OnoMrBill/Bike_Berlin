<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name, class:"sr-only" %>
    <%= form.text_field :first_name, id: :user_first_name, class:"form-control", placeholder:"First name" %>
  </div>

  <div class="field">
    <%= form.label :last_name, class:"sr-only" %>
    <%= form.text_field :last_name, id: :user_last_name, class:"form-control", placeholder:"Last name" %>
  </div>

  <div class="field">
    <%= form.label :email, class:"sr-only" %>
    <%= form.text_field :email, id: :email, class:"form-control", placeholder:"Email" %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class:"form-control btn btn-success", role:"button" %>
  </div>
<% end %>
