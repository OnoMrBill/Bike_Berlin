<div class="c-wrapper">
	<div class="center-div">
		<h2>Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder:" Enter your email address", class:"form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:"btn btn-success", role:"button" %>
    </div>
    <%= notice %>
    <% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>
