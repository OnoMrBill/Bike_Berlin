<!DOCTYPE html>
<html>
  <head>
    <title>Bike Berlin</title>

    <script src="https://use.typekit.net/zmv6zel.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link href="https://fonts.googleapis.com/css?family=Audiowide|Orbitron" rel="stylesheet">

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>    
    
    <%= csrf_meta_tags %>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->    

  </head>

  <body>
    <!--navbar starts here-->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <!-- <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation"> -->
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>          
          <div class="projectName navbar-brand">
            <%= link_to 'Bike Berlin', root_path %>
          </div> <!--end projectName -->          
        </div> <!--end navbar-header -->        
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'Products', products_path %></li>
            <li><%= link_to 'About', static_pages_about_path %></li>
            <li><%= link_to 'Contact', static_pages_contact_path %></li>
            <li>
              <%= form_tag("/products", method:"get", class:"navbar-form navbar-left", role:"search") do %>
                <%= text_field_tag "q", nil, placeholder:"search bikes...", class:"form-control" %>
                <%= submit_tag("Search", class:"form-control btn btn-default") %>

                <% if user_signed_in? %>
                  <%= link_to('Logout', destroy_user_session_path, method: :delete, class:"form-control btn btn-warning", role:"button") %>
                <% else %>
                  <%= link_to('Login', new_user_session_path, class:"form-control btn btn-success", role:"button") %>
                <% end %>

                <%= link_to 'Register', new_user_registration_path, class:"form-control btn btn-primary", role:"button" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div> <!-- end nav container-->      
    </nav><!-- end navbar-->

    <!-- Flash Notice Tags -->
    <% if notice %>
      <!-- <p id="notice" class="alert alert-info"><= notice ></p> -->
      <div id="notice" class="animated fadeOut alert alert-success" role="alert"><%= notice %><%= alert %></div>
    <% end %>    
    <% if alert %>
      <!-- <p id="notice" class="alert alert-info"><= notice ></p> -->
      <div id="alert" class="animated fadeOut alert alert-danger" role="alert"><%= notice %><%= alert %></div>
    <% end %>     
    <!-- <div id="notice" class="notice alert fade in"><= notice ><= alert ></div> -->

		<%= yield %>

    <footer id="footer" class="footer">
      <div class="text-muted">Copyright <span class="glyphicon glyphicon-copyright-mark" aria-hidden="true"></span> 2017 Bill Fennell. All rights reserved.</div>
    </footer>
		  
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <!-- Bootstrap core JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/0c05259ce5.js"></script>

    <!--
    <script src="https://use.typekit.net/zmv6zel.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    -->

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- 
    // <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
    // <script src="../../dist/js/bootstrap.min.js"></script>
    -->
    
  </body>
</html>
