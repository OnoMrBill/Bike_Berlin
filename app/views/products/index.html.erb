
<!-- Flash Notice Tags -->
<% if notice %>
  <div id="notice" class="animated fadeOut alert alert-success" role="alert"><%= notice %><%= alert %></div>
<% end %>    
<% if alert %>
  <div id="alert" class="animated fadeOut alert alert-danger" role="alert"><%= notice %><%= alert %></div>
<% end %>

<div class="menu">
  Products
</div>

<div class="container" id="products">
  <div class="row">
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
  </div>
  <hr>
  <%= will_paginate @products, class:"flickr_pagination" %><br>
  <div class="center"><small><em>(<%= @products.total_entries.to_s + " products..." %>)</small></em></div>  
  <hr>
</div>

<div class="new-product-menu">
	<%= link_to 'New Product', new_product_path, class:"btn btn-success", role:"button" %>
</div>
