
<!-- Flash Notice Tags -->
<% if notice %>
  <div id="notice" class="animated fadeOut alert alert-success" role="alert"><%= notice %><%= alert %></div>
<% end %>    
<% if alert %>
  <div id="alert" class="animated fadeOut alert alert-danger" role="alert"><%= notice %><%= alert %></div>
<% end %>

<div class="menu">
  Products
</div>

<div class="container" id="products">
  <div class="row">
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
  </div>
</div>

<div class="new-product-menu">
	<%= link_to 'New Product', new_product_path %>
</div>
