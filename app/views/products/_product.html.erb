      <%= link_to product do %>
        <div class="card">
          <div class="wrap">
            <!-- image_tag(product.image_url, class: "card-img-top") -->
            <% if asset_exists? "#{product.image_url}" %>
              <%= image_tag("#{product.image_url}", class: "card-img-top") %>
            <% else %>
              <%= image_tag("noimg.jpg", class: "card-img-top") %>
            <% end %>            
          </div>
          <div class="card-block">
            <div id="CardTitle_Share">
              <h4 class="card-title"><%= product.name %></h4>
            </div>
            <p class="card-text"><%= product.description %></p>
          </div>
          <div class="card-footer">
            <strong><%= number_to_euro("#{product.price}") %></strong><!-- <span class="glyphicon glyphicon-eur" aria-hidden="true"><strong> EUR</strong></span> -->
          </div>
        </div>
        <!--end card-->
      <% end %>