<div class="c-wrapper">
	<div class="center-div">
			<h1>Contact Us</h1>

			<%= flash[:notice] %>

			<%= form_tag("/static_pages/thank_you") do %>
				<div class="row" style="width: 600px;">
				  <div class="col-md-12">
				    <div class="form-group">
				      <%= label_tag :name %>
				      <%= text_field_tag :name, nil, class:"form-control", placeholder:"Enter Name" %>
				    </div>      
				    <div class="form-group">
				      <%= label_tag :email, "Email Address" %>
				      <%= text_field_tag :email, nil, class:"form-control", placeholder:"Enter Email" %>
				    </div>
				    <div class="form-group">
				      <%= label_tag :message %>
				      <%= text_area_tag :message, nil, class:"form-control", placeholder:"Enter Message" %>
				    </div>      
				  </div>
				</div>
			  <div class="actions">
			    <%= submit_tag "Send Message", class:"form-control btn btn-success", role:"button" %>
			  </div>				
			<% end %>
	</div>
</div>